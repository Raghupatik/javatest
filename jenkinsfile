pipeline {
    agent any
    tools 
    {
        maven 'maven'
    }

    stages {
        stage('Build') {
            steps {
                sh 'mvn clean package'
            }
        }
        stage('Test') {
            steps {
                echo 'Testing..'
            }
        }
        stage (code quality) {
            steps {
                echo ' code quality'
            }
        }
        stage('Deploy to Dev') {
            steps {
                echo 'Deploying....'
            }
        }
        stage('Deploy to test') {
            steps {
                echo 'test'
            }
        }
        stage('Deploy to UAT') {
            steps {
                echo 'UAT'
            }
        }
        stage('Deploy to prod') {
            steps {
                echo 'prod'
            }
        }
    }
}  